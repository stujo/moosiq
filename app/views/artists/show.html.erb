<div class="page-header">
  <%= link_to artists_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_artist_path(@artist), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show artist</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @artist.name %></dd>

  <dt>Date of birth:</dt>
  <dd><%= @artist.date_of_birth %></dd>

  <dt>Super fan:</dt>
  <dd><%= @artist.super_fan %></dd>

</dl>
